{
  "compilerOptions": {
    "strict": true,
    "allowUnreachableCode": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,

    "allowJs": true,
    "checkJs": false,
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "jsx": "react",
    "paths": {
      "visual/*": ["editor/js/*"],
      "ui/*": ["packages/ui/*"],
      "core/*": ["packages/core/*"],
      "elements/*": ["packages/elements/*"]
    }
  },
  "include": [
    "editor/**/*.ts",
    "editor/**/*.tsx",
    "packages/**/*.ts",
    "packages/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "build",
    "kits",
    "popups",
    "templates",
    "**/libs/**"
  ]
}
